# ── Frontend (Vite) ──
VITE_API_URL=http://localhost:8080
VITE_WS_URL=ws://localhost:8080
VITE_ANALYTICS_ENDPOINT=
VITE_ANALYTICS_WEBSITE_ID=

# ── Backend (Go API) ──
PORT=8080
DATABASE_URL=postgres://harbinger:harbinger@localhost:5432/harbinger?sslmode=disable
JWT_SECRET=change-me-in-production-32-bytes!
CORS_ORIGIN=http://localhost:3000

# ── Docker ──
DOCKER_HOST=unix:///var/run/docker.sock
DOCKER_NETWORK=harbinger-net
MAX_CONTAINERS=20

# ── Rate Limiting ──
RATE_LIMIT_RPM=10

# ── Credits ──
DEFAULT_CREDITS=50

# ── Stripe (optional) ──
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ── Webhooks (optional) ──
WEBHOOK_URL=

# ── Audit ──
AUDIT_LOG_PATH=./logs/audit.jsonl
