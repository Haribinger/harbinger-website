# ── Frontend (Vite) ──
VITE_API_URL=http://localhost:8080
VITE_WS_URL=ws://localhost:8080

# ── Backend (Go API) ──
PORT=8080
DATABASE_URL=postgres://harbinger:harbinger@localhost:5432/harbinger?sslmode=disable
JWT_SECRET=dev-only-secret-do-not-use-in-prod
JWT_EXPIRY=24h
CORS_ORIGIN=http://localhost:3000

# ── Docker ──
DOCKER_HOST=unix:///var/run/docker.sock
DOCKER_NETWORK=harbinger-net
MAX_CONTAINERS=20

# ── Rate Limiting ──
RATE_LIMIT_RPM=60

# ── Credits ──
DEFAULT_CREDITS=100

# ── Audit ──
AUDIT_LOG_PATH=./logs/audit.jsonl
